<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.asus_pc.jianyue.controller.activity.homesActivity.HomeActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4E3E7F"
        app:popupTheme="@style/AppTheme.AppBarOverlay"
        app:theme="@style/MyCustomToolBarStyle">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简阅"
            android:textColor="@color/white"
            android:textSize="24dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/images"
            android:layout_marginLeft="140dp"
            android:src="@drawable/ic_action_scan"/>
                 


    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_below="@+id/toolbar"
        android:id="@+id/fragme"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <include layout="@layout/content_home" />


</LinearLayout>
